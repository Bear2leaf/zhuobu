#version 300 es 
layout(location = 0) in vec4 a_position;
layout(location = 1) in vec4 a_color;


uniform Model {
  mat4 u_world;
};
uniform Camera {
  mat4 u_view;
  mat4 u_projection;
};

out vec4 v_color;

void main() {
    gl_Position = u_projection * u_view * u_world * a_position;
    v_color = a_color;
    gl_PointSize = 10.0;
}