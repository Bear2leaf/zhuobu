#version 300 es 
layout(location = 0) in float a_scale;
layout(location = 1) in vec3 a_position;
layout(location = 2) in vec3 a_positionTo;

uniform float u_time;

out float v_scale;
out vec3 v_position;
void main() {
    v_scale = a_scale * (sin(u_time * 10.0f) * 0.5f + 1.0f);
    v_position = mix(a_position, a_positionTo, 1.0f);
}