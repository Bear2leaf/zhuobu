#version 300 es 
layout(location = 0) in float a_scale;
layout(location = 1) in vec3 a_position;
layout(location = 2) in vec3 a_positionTo;

uniform float u_delta;

out float v_scale;
out vec3 v_position;
void main() {
    v_scale = a_scale;
    v_position = mix(a_position, a_positionTo, u_delta);
}